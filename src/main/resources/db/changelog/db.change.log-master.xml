        <!--</modifySql>-->


        <!--<addAutoIncrement columnName="ID" tableName="AUTHORS" columnDataType="int" incrementBy="1" startWith="1000"/>-->

        <!--Loading of Data-->
        <loadData encoding="UTF-8" file="db/changelog/books.csv" tableName="books" separator=";">
            <column name="id" type="NUMERIC"/>
            <column name="name" type="STRING"/>
        </loadData>
        <loadData encoding="UTF-8" file="db/changelog/authors.csv" tableName="authors" separator=";">
            <column name="id" type="NUMERIC"/>
            <column name="name" type="STRING"/>
            <column name="bookid" type="NUMERIC"/>
        </loadData>
    </changeSet>

</databaseChangeLog>