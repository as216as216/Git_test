        <!-- Create tables -->
        <createTable tableName="books">
            <column name="id" type="NUMERIC">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <!--<constraints nullable="false"/>-->
            </column>
        </createTable>

        <!--<addAutoIncrement columnName="ID" tableName="BOOKS" columnDataType="int" incrementBy="1" startWith="0"/>-->

        <createTable tableName="authors">
            <column name="id" type="NUMERIC">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
            </column>
            <column name="bookid" type="NUMERIC">
                <!--<constraints nullable="false"-->
                <!--foreignKeyName="FK_Region_City"-->
                <!--referencedTableName="Region" referencedColumnNames="nID" deleteCascade="true"/>-->
            </column>
        </createTable>
